<p id="notice"><%= notice %></p>

<h1>Cloud Credentials</h1>

<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Provider</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clouds.each do |cloud| %>
      <tr>
        <td><%= cloud.name %></td>
        <td><%= cloud.provider %></td>
        <td><%= link_to 'Show', cloud %></td>
        <td><%= link_to 'Edit', edit_cloud_path(cloud) %></td>
        <td><%= link_to 'Destroy', cloud, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cloud Credentials', new_cloud_path %>
